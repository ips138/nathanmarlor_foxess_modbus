{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      // Example of attaching to local debug server
      "name": "Python: Attach Local",
      "type": "debugpy",
      "request": "launch",
      "module": "homeassistant",
      "justMyCode": false,
      "args": ["--debug", "--config", "${workspaceFolder}/config"],
      "env": {
        "PYTHONPATH": "${env:PYTHONPATH}:${workspaceFolder}/custom_component"
      }
    }
  ]
}
